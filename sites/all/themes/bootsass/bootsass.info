name = BootSASS / Open Radiation
description = A Drupal Bootstrap Sub-theme, using SASS.
core = 7.x
base theme = bootstrap


; ========================================
;; Regions
; ========================================
;regions[navigation] = Navigation
;regions[header] = Header
;regions[highlighted] = Highlighted
regions[help] = Help
regions[content] = Content
regions[content_bottom] = Content Bottom
;regions[sidebar_first] = Sidebar first
regions[sidebar_second] = Sidebar second
regions[footer] = Footer

regions[front_01] = Front 01
regions[front_02] = Front 02
regions[front_03] = Front 03
;regions[front_04] = Front 04
;regions[front_05] = Front 05

regions[masquerade] = Masquerade


; ========================================
; Layouts - Module Context layout
; ========================================
layouts[default][name] = "Default"
layouts[default][description] = "3 columns - Default layout"
layouts[default][template] = "templates/system/page"
layouts[default][regions][] = "navigation"
layouts[default][regions][] = "header"
layouts[default][regions][] = "highlighted"
layouts[default][regions][] = "help"
layouts[default][regions][] = "content"
layouts[default][regions][] = "content_bottom"
layouts[default][regions][] = "sidebar_first"
layouts[default][regions][] = "sidebar_second"
layouts[default][regions][] = "footer"

layouts[home][name] = "Home page"
layouts[home][description] = "Home page layout"
layouts[home][template] = "templates/system/layout-home"
layouts[home][regions][] = "full_front_01"
layouts[home][regions][] = "front_01"
layouts[home][regions][] = "full_front_02"
layouts[home][regions][] = "front_02"
layouts[home][regions][] = "full_front_03"
layouts[home][regions][] = "front_03"
layouts[home][regions][] = "full_front_04"
layouts[home][regions][] = "front_04"
layouts[home][regions][] = "full_front_05"
layouts[home][regions][] = "front_05"


; ========================================
;; Stylesheets
; ========================================
stylesheets[all][] = css/style.css
stylesheets[all][] = font-icons/font-icons.css

; ========================================
; Scripts
; ========================================
scripts[] = js/bootsass.js
scripts[] = js/equalize.js
scripts[] = js/bluestone_theming.js
scripts[] = js/jquery.hoverIntent.minified.js


